{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build roome",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                //"-fno-rtti",
                "-fno-exceptions",
                "-Wfatal-errors",
                "-pedantic",
                "-pedantic-errors",
                "-Wall",
                "-Wextra",
                "-Wconversion",
                "-Wcast-align",
                "-Wcast-qual",
                "-Wshadow",
                "-Wsign-conversion",
                //"-Wsign-promo",
                "-Wno-unused-parameter",
                "-Wno-unused-result",
                "-g",
                "-o",
                "roome",
                "roome.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds roome."
        }
    ],
    "version": "2.0.0"
}